<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1> Add New Comment to <%= like.name %></h1>
        <form action="/likes/<%=like._id%>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="thoughts..?">
            </div>
            <div class="form-group">
                <button class="btn btn-md btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/likes">Back to the campground page</a>
    </div>
</div>
