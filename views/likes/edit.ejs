<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1> Editing Campground</h1>
        <form action="/likes/<%= like._id%>/?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="like[name]" value="<%= like.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="like[image]" value="<%= like.image%>">
            </div>
            <div class="form-group">
                <textarea class="form-control" type="text" name="like[description]"> <%= like.description%></textarea>
            </div>

            <div class="form-group">
                <button class="btn btn-md btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/likes">Back to the campground page</a>
    </div>
</div>
<% include ../partials/footer %>